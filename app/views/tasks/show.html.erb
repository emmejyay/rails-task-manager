<br>
<h1><%= @task.title %></h1>
<br>
<h2><%= @task.details %></h2>
<br>
<h2><%= @task.completed? %></h2>
<br>
<p><%= link_to "Edit this task", edit_task_path(@task) %></p>
<br>
<p><%= link_to "Delete #{@task.title}?",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<br>
<p><%= link_to "Back to list", tasks_path %></p>
